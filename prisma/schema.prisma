generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String   @unique
  empire    Empire?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Empire {
  id          String        @id @default(cuid())
  name        String @unique
  user        User          @relation(fields: [userId], references: [id])
  userId      String @unique
  coins Int @default(10000)

  buildings   Building[]
  resources   Resource[]
  troops      Troop[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Building {
  id         String    @id @default(cuid())
  type       BuildingType
  level      Int       @default(1)
  empire     Empire    @relation(fields: [empireId], references: [id])
  empireId   String
  price Int  @default(0)

  startedAt  DateTime?
  finishedAt DateTime?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum BuildingType {
  FARM
  MINE
  BARRACKS
  WALL
}

model Resource {
  id        String    @id @default(cuid())
  type      ResourceType
  amount    Int       @default(0)
  empire    Empire    @relation(fields: [empireId], references: [id])
  empireId  String

  updatedAt DateTime  @updatedAt
}

enum ResourceType {
  FOOD
  GOLD
  STONE
  WOOD
}

model Troop {
  id        String    @id @default(cuid())
  type      TroopType
  amount    Int       @default(0)
  empire    Empire    @relation(fields: [empireId], references: [id])
  empireId  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TroopType {
  INFANTRY
  ARCHER
  CAVALRY
}


